// Display the truthiness of values.

fun print_truthiness(value, message){
	if(value){
		print(message + " is truthy.");
	} else {
		print(message + " is falsy.");
	}
}

print_truthiness(nil, "`nil`");
print_truthiness(false, "`false`");
print_truthiness(true, "`true`");
print_truthiness(0, "`0`");
print_truthiness(-0, "`-0`");
print_truthiness(123, "`123`");
print_truthiness(-123, "`-123`");
print_truthiness("", "Empty string");
print_truthiness("nil", "String containing `nil`");
print_truthiness("false", "String containing `false`");
print_truthiness("0", "String containing `0`");
print_truthiness("Hello, Krox!", "String containing `Hello, Krox!`");
print_truthiness(print_truthiness, "Function object");
