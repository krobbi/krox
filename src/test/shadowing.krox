// Demonstrate variable shadowing.

fun print_scope(name, a, b, c){
	print("At " + name + " scope:");
	print(" * " + a + ".");
	print(" * " + b + ".");
	print(" * " + c + ".");
}

var a = "Global A";
var b = "Global B";
var c = "Global C";

{
	var a = "Outer A";
	var b = "Outer B";
	
	{
		var a = "Inner A";
		print_scope("inner", a, b, c);
	}
	
	print_scope("outer", a, b, c);
}

print_scope("global", a, b, c);
